<Window x:Class="Towers.messageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Towers"
        mc:Ignorable="d"
        Title="" Height="158" Width="239"  ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Background="#FF1D1E25">
        <Button Content="Ок" Margin="96,77,95,0" Background="#FF205E5E" Foreground="White" BorderBrush="{x:Null}" Click="Start_Click" Height="26" VerticalAlignment="Top">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3"/>
                </Style>
            </Button.Resources>
        </Button>
        <Label x:Name="mbLabel" Content="" HorizontalAlignment="Center" Margin="0,22,0,0" VerticalAlignment="Top" FontSize="12" Background="{x:Null}" Foreground="White" Width="200" HorizontalContentAlignment="Center"/>
    </Grid>
</Window>
